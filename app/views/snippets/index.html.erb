<p id="notice"><%= notice %></p>

<h3 class="center-align">Snippets:</h3>



<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Snip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @snippets.each do |snippet| %>
      <tr>
        <td><%= snippet.title %></td>
        <td><%= snippet.snip.mb_chars.summarize(:ratio => 10) %></td>
        <div = class="edit-project">
          <td><%= link_to edit_snippet_path(snippet) do %>
              <i class="material-icons">mode_edit</i>
          <% end %>
          </td>
        </div>
        <div class="delete-snippet">
          <td><%= link_to snippet, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="material-icons">delete</i> </td>
            <%end%>
        </div>
      </tr>
    <% end %>
  </tbody>

</table>
<br>


<!-- New snippet button -->
    <div class="center-align">
        <%= link_to new_snippet_path, class: "btn-floating cyan accent-4 waves-effect waves-light" do %>
        <i class="material-icons">add</i>
        <% end %>
    </div>
