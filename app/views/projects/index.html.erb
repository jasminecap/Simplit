<p id="notice"><%= notice %></p>

<h1 class="center-align">Your Projects:</h1>

<table class="bordered center-align">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'View', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn-floating cyan accent-4 center-align">
  <%= link_to new_project_path, class: "waves-effect waves-light" do %>
  <i class="material-icons">add</i>
  <% end %>
  
</div>
