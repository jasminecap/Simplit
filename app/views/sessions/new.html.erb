<h3 class="center">Log In</h3>

<%= form_tag sessions_path do %>
<div class="field">
  <%= label_tag :email %> <br>
  <%= text_field_tag :email %>
</div>

<div class="field">
  <%= label_tag :password %> <br>
  <%= password_field_tag :password %>
</div>

<div class="actions">
  <button class="btn waves-effect waves-light" type="submit" name="action">
    <%= submit_tag "Log In" %>
  </button>
</div>
<% end %>
